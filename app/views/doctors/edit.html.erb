<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 bg-gray-900 min-h-screen">
  <div class="mb-6">
    <h1 class="font-bold text-3xl text-white">Edit Doctor</h1>
  </div>
  <div class="bg-gray-800 shadow-lg rounded-xl p-8 border border-gray-700">
    <%= form_with(model: @doctor, local: true) do |form| %>
      <% if @doctor.errors.any? %>
        <div class="bg-red-900/70 p-4 rounded mb-6 border border-red-700">
          <div class="font-medium text-red-300">
            <%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:
          </div>
          <ul class="mt-3 list-disc list-inside text-sm text-red-300">
            <% @doctor.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-6">
        <%= form.label :name, class: "block text-sm font-medium text-gray-200 mb-1" %>
        <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-400 focus:border-indigo-400 block w-full sm:text-sm border-gray-700 bg-gray-900 text-gray-100 rounded-md placeholder-gray-500 px-4 py-3" %>
      </div>
      <div class="mb-6">
        <%= form.label :gender, class: "block text-sm font-medium text-gray-200 mb-1" %>
        <div class="flex items-center space-x-6">
          <div class="flex items-center">
            <%= form.radio_button :gender, 'male', class: "focus:ring-indigo-400 h-4 w-4 text-indigo-400 border-gray-700 bg-gray-900" %>
            <%= form.label :gender_male, 'Male', class: "ml-2 block text-sm text-gray-200" %>
          </div>
          <div class="flex items-center">
            <%= form.radio_button :gender, 'female', class: "focus:ring-indigo-400 h-4 w-4 text-indigo-400 border-gray-700 bg-gray-900" %>
            <%= form.label :gender_female, 'Female', class: "ml-2 block text-sm text-gray-200" %>
          </div>
        </div>
      </div>
      <div class="mb-6">
        <%= form.label :specialization, class: "block text-sm font-medium text-gray-200 mb-1" %>
        <%= form.text_field :specialization, class: "shadow-sm focus:ring-indigo-400 focus:border-indigo-400 block w-full sm:text-sm border-gray-700 bg-gray-900 text-gray-100 rounded-md placeholder-gray-500 px-4 py-3" %>
      </div>
      <div class="flex justify-end">
        <%= form.submit "Update Doctor", class: "inline-flex items-center px-5 py-2.5 border border-transparent text-sm font-semibold rounded-lg shadow-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-400 transition" %>
      </div>
    <% end %>
  </div>
  <div class="mt-8">
    <%= link_to "Back to Doctor", doctor_path(@doctor), class: "text-indigo-400 hover:text-indigo-200 font-medium transition" %>
  </div>
</div>
