<div class="max-w-4xl mx-auto px-4 py-10 space-y-12">
  <!-- Room Information -->
  <section>
    <div class="flex flex-col sm:flex-row sm:items-center justify-between mb-6">
      <div>
        <h2 class="text-3xl font-bold text-white">Room <span class="text-blue-400">#<%= @room.room_number %></span></h2>
        <p class="text-gray-400 text-sm mt-1">Details and assignments</p>
      </div>
      <div>
        <% if @room.available? %>
          <span class="px-4 py-1 text-xs font-semibold rounded-full bg-green-900 text-green-300 border border-green-700">Available</span>
        <% elsif @room.fully_occupied? %>
          <span class="px-4 py-1 text-xs font-semibold rounded-full bg-red-900 text-red-300 border border-red-700">Fully Occupied</span>
        <% elsif @room.patient.present? %>
          <span class="px-4 py-1 text-xs font-semibold rounded-full bg-yellow-900 text-yellow-300 border border-yellow-700">Patient Only</span>
        <% elsif @room.doctor.present? %>
          <span class="px-4 py-1 text-xs font-semibold rounded-full bg-blue-900 text-blue-300 border border-blue-700">Doctor Assigned</span>
        <% end %>
      </div>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <div class="text-gray-400 text-xs uppercase tracking-wider mb-1">Room Type</div>
        <div class="text-white text-lg font-semibold"><%= @room.room_type.humanize %></div>
      </div>
    </div>
  </section>
  <!-- Staff Assignment -->
  <section>
    <h3 class="text-xl font-bold text-white mb-4">Staff Assignment</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <div class="text-gray-400 text-xs uppercase tracking-wider mb-1">Doctor</div>
        <div class="text-white font-semibold">
          <% if @room.doctor %>
            <%= link_to @room.doctor.name, doctor_path(@room.doctor), class: "text-blue-400 hover:underline hover:text-blue-300 transition" %>
            <span class="ml-2 text-gray-400 text-sm">(<%= @room.doctor.specialization %>)</span>
          <% else %>
            <span class="text-gray-500">No doctor assigned</span>
          <% end %>
        </div>
      </div>
      <div>
        <div class="text-gray-400 text-xs uppercase tracking-wider mb-1">Nurse</div>
        <div class="text-white font-semibold">
          <% if @room.nurse %>
            <%= link_to @room.nurse.name, nurse_path(@room.nurse), class: "text-blue-400 hover:underline hover:text-blue-300 transition" %>
            <span class="ml-2 text-gray-400 text-sm">(<%= @room.nurse.specialization %>)</span>
          <% else %>
            <span class="text-gray-500">No nurse assigned</span>
          <% end %>
        </div>
      </div>
    </div>
  </section>
  <!-- Patient Information -->
  <section>
    <h3 class="text-xl font-bold text-white mb-4">Patient Information</h3>
    <% if @room.patient %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <div class="text-gray-400 text-xs uppercase tracking-wider mb-1">Name</div>
          <div class="text-white font-semibold">
            <%= link_to @room.patient.name, patient_path(@room.patient), class: "text-blue-400 hover:underline hover:text-blue-300 transition" %>
          </div>
        </div>
        <div>
          <div class="text-gray-400 text-xs uppercase tracking-wider mb-1">Gender</div>
          <div class="text-white font-semibold"><%= @room.patient.gender %></div>
        </div>
        <div>
          <div class="text-gray-400 text-xs uppercase tracking-wider mb-1">Age</div>
          <div class="text-white font-semibold"><%= @room.patient.age %></div>
        </div>
        <div>
          <div class="text-gray-400 text-xs uppercase tracking-wider mb-1">Condition</div>
          <div class="text-white font-semibold"><%= @room.patient.condition %></div>
        </div>
      </div>
    <% else %>
      <div class="py-8 text-center text-gray-500">
        <p class="text-sm">No patient is currently assigned to this room.</p>
      </div>
    <% end %>
  </section>
  <!-- Actions -->
  <div class="flex flex-col sm:flex-row justify-between gap-4 pt-8 border-t border-gray-700">
    <%= link_to rooms_path, class: "inline-flex items-center px-4 py-2 border border-gray-700 text-sm font-medium rounded-lg text-gray-200 bg-transparent hover:bg-gray-700 hover:text-white transition" do %>
      <svg class="-ml-1 mr-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Rooms
    <% end %>
    <div class="flex gap-3">
      <%= link_to edit_room_path(@room), class: "inline-flex items-center px-4 py-2 border border-blue-900 text-sm font-medium rounded-lg text-blue-400 bg-transparent hover:bg-blue-900/20 hover:text-blue-200 transition" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Room
      <% end %>
      <%= button_to room_path(@room), method: :delete, data: { confirm: "Are you sure you want to delete this room?" }, class: "inline-flex items-center px-4 py-2 border border-red-900 text-sm font-medium rounded-lg text-red-400 bg-transparent hover:bg-red-900/20 hover:text-red-200 transition" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete Room
      <% end %>
    </div>
  </div>
</div>
