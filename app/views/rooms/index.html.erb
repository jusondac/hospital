<div class="max-w-9xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
  <div class="flex justify-between items-center mb-5">
    <h1 class="font-bold text-3xl text-gray-900 dark:text-white tracking-tight">Rooms</h1>
    <%= link_to new_room_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-semibold text-white bg-indigo-600 dark:bg-indigo-500 hover:bg-indigo-700 dark:hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      New Room
    <% end %>
  </div>
  <!-- Filter Buttons -->
  <div class="mb-5 flex justify-between items-center">
    <!-- Status Filter -->
    <div class="flex flex-wrap gap-2 items-center">
      <%= form_with url: rooms_path, method: :get, local: true, class: "flex flex-wrap gap-2" do |form| %>
        <%= button_to rooms_path, method: :get, params: { room_type: params[:room_type] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:status].blank? ? 'bg-indigo-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          All Rooms
        <% end %>
        <%= button_to rooms_path, method: :get, params: { status: 'available', room_type: params[:room_type] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:status] == 'available' ? 'bg-green-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          Available
        <% end %>
        <%= button_to rooms_path, method: :get, params: { status: 'occupied', room_type: params[:room_type] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:status] == 'occupied' ? 'bg-red-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          Occupied
        <% end %>
        <%= button_to rooms_path, method: :get, params: { status: 'patient_only', room_type: params[:room_type] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:status] == 'patient_only' ? 'bg-yellow-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          Patient Only
        <% end %>
        <%= button_to rooms_path, method: :get, params: { status: 'doctor_assigned', room_type: params[:room_type] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:status] == 'doctor_assigned' ? 'bg-blue-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          Doctor Assigned
        <% end %>
      <% end %>
    </div>
    <!-- Room Type Filter -->
    <div class="flex flex-wrap gap-2 items-center">
      <%= form_with url: rooms_path, method: :get, local: true, class: "flex flex-wrap gap-2" do |form| %>
        <%= button_to rooms_path, method: :get, params: { status: params[:status] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:room_type].blank? ? 'bg-indigo-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          All Types
        <% end %>
        <%= button_to rooms_path, method: :get, params: { room_type: 'general_ward', status: params[:status] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:room_type] == 'general_ward' ? 'bg-purple-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          General Ward
        <% end %>
        <%= button_to rooms_path, method: :get, params: { room_type: 'private_room', status: params[:status] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:room_type] == 'private_room' ? 'bg-purple-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          Private Room
        <% end %>
        <%= button_to rooms_path, method: :get, params: { room_type: 'icu', status: params[:status] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:room_type] == 'icu' ? 'bg-purple-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          ICU
        <% end %>
        <%= button_to rooms_path, method: :get, params: { room_type: 'operating_room', status: params[:status] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:room_type] == 'operating_room' ? 'bg-purple-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          Operating Room
        <% end %>
        <%= button_to rooms_path, method: :get, params: { room_type: 'emergency_room', status: params[:status] }, class: "inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-xs font-medium transition #{params[:room_type] == 'emergency_room' ? 'bg-purple-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'}" do %>
          Emergency Room
        <% end %>
      <% end %>
    </div>
  </div>
  <% if @rooms.empty? %>
    <div class="flex flex-col items-center justify-center py-24">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-300 dark:text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-200 mb-1">No rooms</h3>
      <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">Get started by creating a new room.</p>
      <%= link_to new_room_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-semibold text-white bg-indigo-600 dark:bg-indigo-500 hover:bg-indigo-700 dark:hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Room
      <% end %>
    </div>
  <% else %>
    <div class="overflow-x-auto border border-gray-200 dark:border-gray-700 rounded-xl">
      <table class="min-w-full text-sm text-left">
        <thead class="bg-gray-50 dark:bg-gray-800">
          <tr>
            <th class="px-6 py-3 font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Room Number</th>
            <th class="px-6 py-3 font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Room Type</th>
            <th class="px-6 py-3 font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Capacity</th>
            <th class="px-6 py-3 font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Patients</th>
            <th class="px-6 py-3 font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Staff</th>
            <th class="px-6 py-3 font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 dark:divide-gray-700 bg-white dark:bg-gray-900">
          <%= render 'room_table_rows' %>
        </tbody>
      </table>
    </div>
  <% end %>
  <div class="mt-8">
    <%= render 'shared/pagination', pagy: @pagy %>
  </div>
