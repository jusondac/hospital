<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12 bg-gray-900 min-h-screen">
  <div class="mb-8">
    <h1 class="font-bold text-3xl text-white">Edit Nurse</h1>
  </div>
  <%= form_with(model: @nurse, local: true) do |form| %>
    <% if @nurse.errors.any? %>
      <div class="bg-red-900/70 p-4 rounded mb-8">
        <div class="font-medium text-red-300">
          <%= pluralize(@nurse.errors.count, "error") %> prohibited this nurse from being saved:
        </div>
        <ul class="mt-3 list-disc list-inside text-sm text-red-300">
          <% @nurse.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-8">
      <%= form.label :name, class: "block text-sm font-medium text-gray-200 mb-1" %>
      <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-400 focus:border-indigo-400 block w-full sm:text-sm border-gray-700 rounded-md bg-gray-800 text-white px-4 py-3" %>
    </div>
    <div class="mb-8">
      <%= form.label :gender, class: "block text-sm font-medium text-gray-200 mb-1" %>
      <div class="text-sm text-red-400 mb-2">Note: Only female nurses are allowed</div>
      <div class="flex items-center">
        <%= form.radio_button :gender, 'female', checked: true, class: "focus:ring-indigo-400 h-4 w-4 text-indigo-400 border-gray-700 bg-gray-800" %>
        <%= form.label :gender_female, 'Female', class: "ml-2 block text-sm text-gray-200" %>
      </div>
    </div>
    <div class="mb-8">
      <%= form.label :specialization, class: "block text-sm font-medium text-gray-200 mb-1" %>
      <%= form.text_field :specialization, class: "shadow-sm focus:ring-indigo-400 focus:border-indigo-400 block w-full sm:text-sm border-gray-700 rounded-md bg-gray-800 text-white px-4 py-3" %>
    </div>
    <div class="mb-8">
      <%= form.label :doctor_id, "Assign to Doctor", class: "block text-sm font-medium text-gray-200 mb-1" %>
      <%= form.collection_select :doctor_id, @doctors, :id, :name, { include_blank: "-- Select a doctor --" }, class: "mt-1 block w-full pl-3 pr-10 py-3 text-base border-gray-700 focus:outline-none focus:ring-indigo-400 focus:border-indigo-400 sm:text-sm rounded-md bg-gray-800 text-white" %>
      <p class="mt-1 text-sm text-gray-400">Optional: You can leave this unassigned</p>
    </div>
    <div class="flex justify-end">
      <%= form.submit "Update Nurse", class: "inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-400" %>
    </div>
  <% end %>
  <div class="mt-10">
    <%= link_to "Back to Nurse", nurse_path(@nurse), class: "text-indigo-400 hover:text-indigo-200" %>
  </div>
</div>
