<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <h1 class="font-bold text-3xl">Edit Nurse</h1>
  </div>
  <div class="bg-white shadow-sm rounded-lg p-6">
    <%= form_with(model: @nurse, local: true) do |form| %>
      <% if @nurse.errors.any? %>
        <div class="bg-red-50 p-4 rounded mb-6">
          <div class="font-medium text-red-600">
            <%= pluralize(@nurse.errors.count, "error") %> prohibited this nurse from being saved:
          </div>
          <ul class="mt-3 list-disc list-inside text-sm text-red-600">
            <% @nurse.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-6">
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <div class="mb-6">
        <%= form.label :gender, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="text-sm text-red-600 mb-2">Note: Only female nurses are allowed</div>
        <div class="flex items-center">
          <%= form.radio_button :gender, 'female', checked: true, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
          <%= form.label :gender_female, 'Female', class: "ml-2 block text-sm text-gray-700" %>
        </div>
      </div>
      <div class="mb-6">
        <%= form.label :specialization, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :specialization, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <div class="mb-6">
        <%= form.label :doctor_id, "Assign to Doctor", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.collection_select :doctor_id, @doctors, :id, :name, { include_blank: "-- Select a doctor --" }, class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
        <p class="mt-1 text-sm text-gray-500">Optional: You can leave this unassigned</p>
      </div>
      <div class="flex justify-end">
        <%= form.submit "Update Nurse", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
  <div class="mt-8">
    <%= link_to "Back to Nurse", nurse_path(@nurse), class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
</div>
